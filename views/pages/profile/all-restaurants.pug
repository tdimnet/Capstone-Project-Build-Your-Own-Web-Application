extends ../../core/layout

block content
    .jumbotron.jumbotron-fluid.bg-info.text-white
        .container.text-sm-center.pt-5
            h1.display-4 All restaurants view
            p.lead Below is all your restaurants saved
            a.btn.btn-outline-light(href='/profile') Return to home

    if restaurants.length > 0
        .container.table-responsive
            table.table.table-striped.table-hover
                thead
                    tr
                        th #
                        th Nickname
                        th Restaurant Type
                        th City
                        th See details
                tbody
                    each restaurant, index in restaurants
                            tr
                                td= index
                                td= restaurant.nickName
                                td= restaurant.restaurantType
                                td= restaurant.city
                                td
                                    a.btn.btn-outline-primary(href='/profile/restaurant-saved/' + restaurant.restaurantName) See Restaurant Details

    else
        .container
            .row.justify-content-center
                .alert.alert-info
                    h4.alert-heading No restaurant saved
